<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.main.profile.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="30dp"
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/profileuser" />

        <com.memebattle.flexible_control.core.presentation.TextViewFlex
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:text="Зубенко Михаил Петрович"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            app:customFont="@string/bold_font" />

        <com.memebattle.flexible_control.core.presentation.TextViewFlex
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="60dp"
            android:text="Возраст: 23"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            app:customFont="@string/bold_font" />
        <com.memebattle.flexible_control.core.presentation.TextViewFlex
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="60dp"
            android:text="Текущих задач: 4"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            app:customFont="@string/main_font" />
        <com.memebattle.flexible_control.core.presentation.TextViewFlex
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="25dp"
            android:text="Всего задач выполнено: 204"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            app:customFont="@string/main_font" />
        <com.memebattle.flexible_control.core.presentation.TextViewFlex
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="25dp"
            android:text="Пройдено км: 204"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            app:customFont="@string/main_font" />

        <Button
            android:id="@+id/button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:background="@drawable/button"
            android:text="Выйти"
            android:textColor="@color/white" />

        <com.memebattle.flexible_control.core.presentation.TextViewFlex
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="16dp"
            android:text="Сменить пароль"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            app:customFont="@string/main_font"
            app:textAllCaps="false" />

    </LinearLayout>

</FrameLayout>